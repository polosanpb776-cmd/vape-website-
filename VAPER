  <script>
    // Age modal logic
    (function(){
      const modal = document.getElementById('ageModal');
      const confirm = document.getElementById('confirmAge');
      const deny = document.getElementById('denyAge');

      confirm.addEventListener('click', ()=> {
        modal.style.display = 'none';
      });
      deny.addEventListener('click', ()=> {
        // redirect away (user chose not to continue)
        window.location.href = 'about:blank';
      });
    })();

    // Accordion FAQ
    document.querySelectorAll('.acc button').forEach(btn => {
      btn.addEventListener('click', () => {
        const panel = btn.nextElementSibling;
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        // close all
        document.querySelectorAll('.acc .panel').forEach(p => p.style.display = 'none');
        document.querySelectorAll('.acc button').forEach(b => b.setAttribute('aria-expanded','false'));
        if (!expanded) {
          panel.style.display = 'block';
          btn.setAttribute('aria-expanded','true');
        } else {
          panel.style.display = 'none';
          btn.setAttribute('aria-expanded','false');
        }
      });
    });

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
